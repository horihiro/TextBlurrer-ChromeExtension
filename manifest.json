{
  "manifest_version": 3,
  "name": "Text Blurrer",
  "version": "0.0.1",
  "version_name": "0.0.1 alpha",
  "description": "Blurring sensitive specified text/keyword.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup/main.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/js/main.js"
      ],
      "css": [
        "content/css/blur.css"
      ]
    }
  ]
}