{
  "manifest_version": 3,
  "name": "Text Blurrer",
  "version": "0.2.0",
  "version_name": "0.2.0",
  "description": "Blurring sensitive specified text/keyword.",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup/main.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/js/main.js"
      ]
    }
  ]
}